<div class="container">
  <div class="col-md-12 space-m article-block">
    <h1 class="text-center">ブログの新規作成</h1>
    <%= image_tag 'top-image1.jpg', class: 'article-image image-block-top' %>
    <div class="image-block-bottom">
      <%= form_for @article do |f| %>
        <div class="form-group image-block-top">
          <%= f.label :title, 'タイトル' %>
          <%= f.text_field :title, class: 'form-control' %>
        </div>
        <div class="form-group">
        <%= f.label :body, '本文' %>
        <%= f.text_field :body, class: 'form-control' %>
        </div>
        <%= f.submit '新規作成', class: 'btn btn-success' %>
      <% end %>
    </div>
  </div>
</div>
